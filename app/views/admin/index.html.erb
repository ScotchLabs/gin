<h1>Listing shows</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Abbrev</th>
    <th>Loc</th>
    <th>Imageurl</th>
    <th>Author</th>
    <th>Ticketprices</th>
    <th>Performancetimes</th>
    <th>Ticketstatus</th>
    <th>Homeshow</th>
  </tr>

<%
color = true
@shows.each do |show|
	if color
		color = false
		style = " style=\"background-color:\#bbbbbb;\""
	else
		color = true
		style = " style=\"background-color:\#dddddd;\""
	end
%>
  <tr <%= style %>>
    <td class='admintd'><%=h show.name %></td>
    <td class='admintd'><%=h show.abbrev %></td>
    <td class='admintd'><%=h show.loc %></td>
    <td class='admintd'><%=h show.imageurl %></td>
    <td class='admintd'><%=h show.author %></td>
    <td class='admintd'><%=h !show.ticketprices.blank? %></td>
    <td class='admintd'><%=h !show.performancetimes.blank? %></td>
    <td class='admintd'><%=h show.ticketstatus %></td>
    <td class='admintd'><%=h show.homeshow %></td>
    <td class='admintd'><%= link_to 'Show', show %></td>
    <td class='admintd'><%= link_to 'Edit', edit_show_path(show) %></td>
    <td class='admintd'><%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New show', new_show_path %>

