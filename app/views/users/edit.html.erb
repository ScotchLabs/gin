<% ast = "<span style=\"color:red;font-variant:italics;\">*</span>" %>
<h1>Editing user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p style="color:red;font-variant:italics;">
	* Required
  </p>

  <p>
    <%= f.label :name %><%= ast %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :password %><%= ast %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label "Retype password" %><%= ast %><br />
    <%= f.text_field :retype %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @update %> |
<%= link_to 'Back', updates_path %>