<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
  </tr>
<%
trclass = "class='zebra'"
@users.each do |user|
  if trclass=="class='zebra'"
    trclass = ""
  else
    trclass = "class='zebra'"
  end
%>
  <tr <%= trclass %>>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <% if can? :update, User %><td><%= link_to 'Edit', edit_user_path(user) %></td><% end %>
    <% if can? :destroy, User %><td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td><% end %>
  </tr>
<% end %>
</table>

<br />

<% if can? :update, Update %><%= link_to 'New update', new_user_path %><% end %>
