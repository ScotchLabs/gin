<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Roles:</b>
  <% r = @user.roles || Array.new
  r.split("|").map {|r|
    u=User.role(r)
    u[1] unless u.nil?
  }.join(", ") %>
</p>

<% if can? :update, User %><%= link_to 'Edit', edit_user_path(@user) %> | <% end %>
<%= link_to 'Back', users_path %>
