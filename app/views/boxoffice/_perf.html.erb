<%
trs = @show.ticketrezs
@trs = Array.new
for tr in trs
  found = Rezlineitem.first(:conditions => ["ticketrez_id = ? and performance = ?",tr.id,perf])
  @trs.push(tr) unless found.nil?
end
%>
<table>
<tr>
<th>Name</th>
<th>Email</th>
<th>Has id?</th>
<th>Section</th>
<th>Quantity</th>
<th>Amt Due</th>
</tr>
<%
trclass = "class='zebra'"
for tr in @trs
  # get all rezs
  rez = Rezlineitem.first(:conditions => ["ticketrez_id = ? and performance = ?",tr.id,perf])
  section = rez.ticketsection
  qty = rez.quantity
  cost = section.pricewithid * qty if tr.hasid
  cost = section.pricewoutid * qty unless tr.hasid
  if trclass=="class='zebra'"
    trclass = ""
  else
    trclass = "class='zebra'"
  end
  %><tr <%= trclass %>>
    <td><%= tr.name %></td>
    <td><%= tr.email %></td>
    <td><%= tr.hasid %></td>
    <td><%= section.name %></td>
    <td><%= qty %></td>
    <td>$<%= cost %></td>
  </tr>
<% end %></table><br />
