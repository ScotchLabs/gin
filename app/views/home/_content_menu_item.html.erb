<%
link = {:controller => "home", :action => "showcontent", :id => content_menu_item.anchor}
link = content_menu_item.anchor if content_menu_item.contenttype == "link"
style = "color:#333333;" if !@content.nil? && content_menu_item.anchor == @content.anchor
menutitle = content_menu_item.title
menutitle = content_menu_item.menutitle if !content_menu_item.menutitle.nil? && !content_menu_item.menutitle.blank?
menutitle = menutitle.split(" ").join("&nbsp;")
hidden = " class='hidnopub'" if !content_menu_item.publish || content_menu_item.hidden
%>
<li<%= hidden %>>
	<%= link_to menutitle, link, :style => style %>
</li>