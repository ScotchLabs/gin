<% ast = "<span style=\"color:red;font-variant:italics;\">*</span>" %>
<h1>Editing show</h1>

<% form_for(@show) do |f| %>
  <%= f.error_messages %>

  <p style="color:red;font-variant:italics;">
	* Required
  </p>

  <p>
    <%= f.label :name, "Show name" %><%= ast %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :shortdisplayname, "Short Display Name" %><%= ast %><br />
    <%= f.text_field :shortdisplayname %>
  </p>
  <p>
    <%= f.label :abbrev, "Abbreviation" %><%= ast %><br />
    <%= f.text_field :abbrev, {:disabled => true} %>
  </p>
  <p>
    <%= f.label :slot %><br />
    <%= f.select(:slot, {"Other","Other","Homecoming","Homecoming","Carnival","Carnival","Festival","Festival"}) %>
  </p>
  <p>
    <%= f.label :loc, "Location" %><br />
    <%= f.text_field :loc %>
  </p>
  <p>
    <%= f.label :imageurl, "Image name" %><%= ast %> (use temp.png if you don't have one now)<br />
    <%= f.text_field :imageurl %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :director, "Director" %><br />
    <%= f.text_field :director %>
  </p>
  <p>
    <%= f.label :housemanname %><br />
    <%= f.text_field :housemanname %>
  </p>
  <p>
    <%= f.label :housemanemail %><br />
    <%= f.text_field :housemanemail %>
  </p>
  <p>
    <%= f.label :ticketnotes %><br />
    <%= f.text_area :ticketnotes, :rows => 2 %>
  </p>
  <p>
    <%= f.label :performancetimes, "Performance times" %><%= ast %> (please use pipe-separated timestamps)<br />
    <%= f.text_field :performancetimes %>
  </p>
  <p>
    <%= f.label :ticketstatus, "Ticket status" %><%= ast %><br />
  	<%= f.select("ticketstatus", {"Open","open","Closed","closed","Completed","completed"}) %>
  </p>
  <p>
    <%= f.label :timesvisible, "Performance times visible?" %><%= ast %><br />
    <%= f.check_box :timesvisible %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @show %> |
<%= link_to 'Back', shows_path %>