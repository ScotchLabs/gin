<h1>Listing ticketsections</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price (ID/no ID)</th>
    <th>Size</th>
  </tr>

<%
trclass = "class='zebra'"
@ticketsections.each do |ticketsection|
  if trclass=="class='zebra'"
    trclass = ""
  else
    trclass = "class='zebra'"
  end
%>
  <tr <%= trclass %>>
    <td><%= ticketsection.name %></td>
    <td><%= ticketsection.pricewithid %>/<%= ticketsection.pricewoutid %></td>
    <td><%= ticketsection.size %></td>
    <td><%= link_to 'Show', ticketsection %></td>
    <% if can? :update, Ticketsection %><td><%= link_to 'Edit', edit_ticketsection_path(ticketsection) %></td><% end %>
    <% if can? :destroy, Ticketsection %><td><%= link_to 'Destroy', ticketsection, :confirm => 'Are you sure?', :method => :delete %></td><% end %>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Ticketsection %><%= link_to 'New ticketsection', new_ticketsection_path+"/"+@show.abbrev %><% end %>
<br />
<br />

