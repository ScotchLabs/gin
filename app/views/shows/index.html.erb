<h1>Listing shows</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Abbrev</th>
    <th>Slot</th>
    <th>Imageurl</th>
    <th>Ticketstatus</th>
  </tr>
<%
trclass = "class='zebra'"
@shows.each do |show|
  if trclass=="class='zebra'"
    trclass = ""
  else
    trclass = "class='zebra'"
  end
%>
  <tr <%= trclass %>>
    <td><%=h show.name %></td>
    <td><%=h show.abbrev %></td>
    <td><%=h show.slot %></td>
    <td><%=h show.imageurl %></td>
    <td><%=h show.ticketstatus %></td>
    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <% if session[:user_permissions]["shows"]["d"] %><td><%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></td><% end %>
  </tr>
<% end %>
</table>

<br />

