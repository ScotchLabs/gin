<h1>Listing shows</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Abbrev</th>
    <th>Slot</th>
    <th>Imageurl</th>
    <th>Ticketstatus</th>
  </tr>
<% @shows.each do |show| %>
  <tr>
    <td><%=h show.name %></td>
    <td><%=h show.abbrev %></td>
    <td><%=h show.slot %></td>
    <td><%=h show.imageurl %></td>
    <td><%=h show.ticketstatus %></td>
    <td><%= link_to 'Show', show %></td>
    <% if User.find(session[:user_id]).hasaccess("shows", "update") %><td><%= link_to 'Edit', edit_show_path(show) %></td><% end %>
    <% if User.find(session[:user_id]).hasaccess("shows", "destroy") %><td><%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></td><% end %>
    <% if User.find(session[:user_id]).hasaccess("boxoffice","show") %><td><%= link_to 'Box Office', '/boxoffice/show/#{show.abbrev}' %></td><% end %>
  </tr>
<% end %>
</table>

<br />

<% if User.find(session[:user_id]).hasaccess("shows", "create") %><%= link_to 'New show', new_show_path %><% end %>
