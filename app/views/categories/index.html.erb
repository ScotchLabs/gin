<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Anchor</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%=h category.name %></td>
    <td><%=h category.anchor %></td>
    <td><%= link_to 'Show', category %></td>
    <% if session[:crud]["u"]["categories"] %><td><%= link_to 'Edit', edit_category_path(category) %></td><% end %>
    <% if session[:crud]["d"]["categories"] %><td><%= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete %></td><% end %>
  </tr>
<% end %>
</table>

<br />

<% if session[:crud]["c"]["categories"] %><%= link_to 'New category', new_category_path %><% end %>