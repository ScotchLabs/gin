<h1>New rezlineitem</h1>

<%= form_for(@rezlineitem) do |f| %>
  <% if @rezlineitem.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@rezlineitem.errors.count, "error") %> prohibited this rezlineitem from being saved:</h2>
