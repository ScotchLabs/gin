<h1>Listing contents</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Contentpane</th>
    <th>Contenttype</th>
    <th>Anchor</th>
    <th>Publish</th>
    <th>Order</th>
    <th>Article</th>
  </tr>
<% @contents.each do |content| %>
  <tr>
    <td><%=h content.title %></td>
    <td><%=h content.contentpane %></td>
    <td><%=h content.contenttype %></td>
    <td><%=h content.anchor %></td>
    <td><%=h content.publish %></td>
    <td><%=h content.order %></td>
    <td><%=h !content.article.blank? %></td>
    <td><%= link_to 'Show', content %></td>
    <% if User.find(session[:user_id]).hasaccess("contents", "edit") %><td><%= link_to 'Edit', edit_content_path(content) %></td><% end %>
    <% if User.find(session[:user_id]).hasaccess("contents", "destroy") %><td><%= link_to 'Destroy', content, :confirm => 'Are you sure?', :method => :delete %></td><% end %>
  </tr>
<% end %>
</table>

<br />

<% if User.find(session[:user_id]).hasaccess("contents", "create") %><%= link_to 'New content', new_content_path %><% end %>