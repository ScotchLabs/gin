<h1>Listing contents</h1>

<table>
  <tr>
    <th>Title</th>
	<th>Contentpane</th>
    <th>Menutitle</th>
	<th>Contenttype</th>
    <th>Anchor</th>
    <th>Publish</th>
    <th>Hidden</th>
    <th>Order</th>
    <th>Article</th>
  </tr>

<%
color = true
@contents.each do |content|
	if color
		color = false
		style = " style=\"background-color:\#bbbbbb;\""
	else
		color = true
		style = " style=\"background-color:\#dddddd;\""
	end	
%>
  <tr <%= style %>>
    <td class='admintd'><%=h content.title %></td>
	<td class='admintd'><%=h content.contentpane %></td>
    <td class='admintd'><%=h content.menutitle %></td>
	<td class='admintd'><%=h content.contenttype %></td>
    <td class='admintd'><%=h content.anchor %></td>
    <td class='admintd'><%=h content.publish %></td>
    <td class='admintd'><%=h content.hidden %></td>
    <td class='admintd'><%=h content.order %></td>
    <td class='admintd'><%=h !content.article.blank? %></td>
    <td class='admintd'><%= link_to 'Show', content %></td>
    <td class='admintd'><%= link_to 'Edit', edit_content_path(content) %></td>
    <td class='admintd'><%= link_to 'Destroy', content, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New content', new_content_path %>