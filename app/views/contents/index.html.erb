<h1>Listing contents</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Contentpane</th>
    <th>Contenttype</th>
    <th>Anchor</th>
    <th>Publish</th>
    <th>Order</th>
    <th>Article</th>
  </tr>
<%
trclass = "class='zebra'"
@contents.each do |content|
  if trclass=="class='zebra'"
    trclass = ""
  else
    trclass = "class='zebra'"
  end
%>
  <tr <%= trclass %>>
    <td><%=h content.title %></td>
    <td><%=h content.contentpane %></td>
    <td><%=h content.contenttype %></td>
    <td><%=h content.anchor %></td>
    <td><%=h content.publish %></td>
    <td><%=h content.order %></td>
    <td><%=h !content.article.blank? %></td>
    <td><%= link_to 'Show', content %></td>
    <% if can? :update, Content %><td><%= link_to 'Edit', edit_content_path(content) %></td><% end %>
    <% if can? :destroy, Content %><td><%= link_to 'Destroy', content, :confirm => 'Are you sure?', :method => :delete %></td><% end %>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Content %><%= link_to 'New content', new_content_path %><% end %>
