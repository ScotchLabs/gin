<% ast = "<span style=\"color:red;font-variant:italics;\">*</span>" %>
<h1>New update</h1>

<% form_for(@update) do |f| %>
  <%= f.error_messages %>

  <p style="color:red;font-variant:italics;">
	* Required
  </p>

<p>
    <%= f.label :name %><%= ast %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :anchor %><%= ast %><br />
    <%= f.text_field :anchor %> (you will not be able to change this later)
  </p>
  <p>
    <%= f.label :expiredate, "Expiration date" %><%= ast %><br />
    <%= f.datetime_select :expiredate %>
  </p>
  <p>
	You can use <a href='http://redcloth.rubyforge.org/'>RedCloth</a> to mark up your news update!
  </p>
  <p>
    <%= f.label :article %><br />
    <%= f.text_area :article, :cols => 107 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', updates_path %>