<% ast = "<span style=\"color:red;font-variant:italics;\">*</span>" %>
<h1>New update</h1>

<% form_for(@update) do |f| %>
  <% if @update.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@update.errors.count, "error") %> prohibited this update from being saved:</h2>
    <ul>
    <% @update.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <p style="color:red;font-variant:italics;">
	* Required
  </p>

<p>
    <%= f.label :name %><%= ast.html_safe %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :anchor %><%= ast.html_safe %><br />
    <%= f.text_field :anchor %> (you will not be able to change this later)
  </p>
  <p>
    <%= f.label :expiredate, "Expiration date" %><%= ast.html_safe %><br />
    <%= f.datetime_select :expiredate %>
  </p>
  <p>
	You can use <a href='http://redcloth.rubyforge.org/'>RedCloth</a> to mark up your news update!
  </p>
  <p>
    <%= f.label :article %><br />
    <%= f.text_area :article, :cols => 107 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', updates_path %>
