<h1>Listing updates</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Anchor</th>
    <th>Expiredate</th>
    <th>Article</th>
  </tr>

<%
color = true
@updates.each do |update|
	if color
		color = false
		style = " style=\"background-color:\#bbbbbb;\""
	else
		color = true
		style = " style=\"background-color:\#dddddd;\""
	end
%>
  <tr <%= style %>>
    <td><%=h update.name %></td>
    <td><%=h update.anchor %></td>
    <td><%=h update.expiredate %></td>
    <td><%=h !update.article.blank? %></td>
    <td><%= link_to 'Show', update %></td>
    <% if session[:crud]["u"]["updates"] %><td><%= link_to 'Edit', edit_update_path(update) %></td><% end %>
    <% if session[:crud]["d"]["updates"] %><td><%= link_to 'Destroy', update, :confirm => 'Are you sure?', :method => :delete %></td><% end %>
  </tr>
<% end %>
</table>

<br />

<% if session[:crud]["c"]["updates"] %><%= link_to 'New update', new_update_path %><% end %>