<h1>Listing updates</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Anchor</th>
    <th>Expiredate</th>
    <th>Article</th>
  </tr>
<% @updates.each do |update| %>
  <tr>
    <td><%=h update.name %></td>
    <td><%=h update.anchor %></td>
    <td><%=h update.expiredate %></td>
    <td><%=h !update.article.blank? %></td>
    <td><%= link_to 'Show', update %></td>
    <% if User.find(session[:user_id]).hasaccess("updates", "update") %><td><%= link_to 'Edit', edit_update_path(update) %></td><% end %>
    <% if User.find(session[:user_id]).hasaccess("updates", "destroy") %><td><%= link_to 'Destroy', update, :confirm => 'Are you sure?', :method => :delete %></td><% end %>
  </tr>
<% end %>
</table>

<br />

<% if User.find(session[:user_id]).hasaccess("updates", "create") %><%= link_to 'New update', new_update_path %><% end %>